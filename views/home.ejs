    <body>
        
            <h1>TODO App</h1>
            <h3>Your personal task manager and tracker</h3>
            <p>
                Add your tasks and and finish them #beProductive!
            </p>
      
        <form action="/add-task" method="POST">
            Description: 
            <input type="text" name="Description" placeholder="What do you need to do?" required></br>
            Category: 
            <input list="Category" name="Category" placeholder="Choose Category">
            <datalist id="Category">
                <option value="home">Home</option>
                <option value="school">School</option>
                <option value="intern">Intern</option>
                <option value="chill">Chill</option>
            </datalist>
            Due Date: 
            <input type="date" name="Date" placeholder="dd/mm/yyyy" >
        </br>
     
            <button type="submit">Add Task</button>
            
        </form>
   
        <!--add a table (in form format so as to take input) to add tasks, select category- will add a label and date-->
        <!--Then add buttons to add tasks or delete a task-->
        <table id="show_tasks">
            <!-- maybe define i in global context?? and need a form -->
            <form action="/delete-task" method="POST">
                <button type="delete">Delete</button>
                <%for(let i of task_list){%>
                    <div class="tasks">
                <tr>
                    <td rowspan="2" id="check">
                        <input type="checkbox" name="check" value="<%= i._id %>">
                    </td>
                    <td id="desc">
                        <p><%= i.Description %></p>
                    </td>
                    <td rowspan="2" id="cat">
                        <p><%= i.Category %></p>
                    </td>
                </tr>
                <tr>
                    <td id="date">
                        <p><%= i.Date %></p>
                    </td>
                </tr>
            </div>
            <%}%>
            </form>
           
        </table>
        
